# GarvisNeuralMind v2 - Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
HOST=0.0.0.0
PORT=8000
DEBUG=false
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://garvis:garvis_pass@localhost:5432/garvis_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=garvis_db
DB_USER=garvis
DB_PASSWORD=garvis_pass

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API Keys and External Services
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Discord Bot (Optional)
DISCORD_BOT_TOKEN=your-discord-bot-token-here
DISCORD_GUILD_ID=your-discord-guild-id-here

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Community Features
ENABLE_COMMUNITY_FEATURES=true
MAX_USERS_PER_ROOM=100
WEBSOCKET_TIMEOUT=60

# AI Model Configuration
DEFAULT_MODEL=gpt-3.5-turbo
MAX_TOKENS=4000
TEMPERATURE=0.7
ENABLE_FINE_TUNING=false

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIRECTORY=./uploads
ALLOWED_EXTENSIONS=.txt,.md,.pdf,.doc,.docx

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/garvis.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Performance Settings
WORKERS=1
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=30

# Feature Flags
ENABLE_BROWSER_CONTROL=false
ENABLE_VOICE_INTERACTION=false
ENABLE_MEMORY_STORAGE=true
ENABLE_PROMETHEUS_METRICS=true

# Development Settings (only for development)
DEV_MODE=false
RELOAD_ON_CHANGE=true
PROFILING_ENABLED=false